<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <components>

        <!-- IRC configuration -->
        <component service="Stwalkerster.IrcClient.Interfaces.IIrcConfiguration, Stwalkerster.IrcClient"
                   type="Stwalkerster.IrcClient.IrcConfiguration, Stwalkerster.IrcClient">
            <parameters>
                <authToServices>true</authToServices>
                <ssl>true</ssl>
                <hostname>irc.libera.chat</hostname>
                <port>6697</port>
                <nickname></nickname>
                <realName></realName>
                <username></username>
                <serverPassword></serverPassword>
                <servicesUsername></servicesUsername>
                <servicesPassword></servicesPassword>
                <clientName>Libera.Chat</clientName>
            </parameters>
        </component>

        <!-- Other configuration -->
        <component type="Helpmebot.Configuration.BotConfiguration, Helpmebot.Configuration">
            <parameters>
                <commandTrigger>!</commandTrigger>
                <userAgent>Helpmebot (+https://helpmebot.org.uk)</userAgent>
                <httpTimeout>5000</httpTimeout>
                <debugChannel></debugChannel>
                <enableNotificationService>false</enableNotificationService>
                <!--<ipInfoDbApiKey></ipInfoDbApiKey>-->
                <!--<maxMindDatabasePath></maxMindDatabasePath>-->
                <!--<disableCertificateValidation>false</disableCertificateValidation>-->
                <!--<accDeploymentPassword></accDeploymentPassword>-->
                <!--<log4netConfiguration>logger.config</log4netConfiguration>-->
            </parameters>
        </component>

        <component type="Helpmebot.Configuration.DatabaseConfiguration, Helpmebot.Configuration">
            <parameters>
                <hostname></hostname>
                <!--<port>3306</port>-->
                <username></username>
                <password></password>
                <schema></schema>
                <!--<charset></charset>-->
            </parameters>
        </component>

        <!-- configuration for mode monitoring service -->
        <component type="Helpmebot.Configuration.ModeMonitorConfiguration, Helpmebot.Configuration">
            <parameters>
                <channelMap>
                    <dictionary>
                        <!--<entry key="#channel-to-monitor">#channel-to-report</entry>-->
                    </dictionary>
                </channelMap>
            </parameters>
        </component>

        <!-- Configuration for the Join Message service / Welcomer -->
        <component type="Helpmebot.Configuration.JoinMessageServiceConfiguration, Helpmebot.Configuration">
            <parameters>
                <rateLimitDuration>10</rateLimitDuration>
                <rateLimitMax>1</rateLimitMax>
            </parameters>
        </component>

        <!-- Category monitoring -->
        <component type="Helpmebot.Configuration.CategoryWatcherConfiguration, Helpmebot.Configuration">
            <parameters>
                <enabled>false</enabled>
                <updateFrequency>60</updateFrequency>
                <crossoverTimeout>30</crossoverTimeout>
            </parameters>
        </component>

        <!-- Override commands in specific channels -->
        <component type="Helpmebot.Configuration.CommandOverrideConfiguration, Helpmebot.Configuration">
            <parameters>
                <overrideMap>
                    <list>
                        <!-- <item keyword="help" channel="#channel" type="NullCommand" />-->
                    </list>
                </overrideMap>
            </parameters>
        </component>

        <!-- Configuration for wiki to write help data to -->
        <component type="Helpmebot.Configuration.MediaWikiDocumentationConfiguration, Helpmebot.Configuration">
            <parameters>
                <documentationPrefix>CmdAutogen:Command/</documentationPrefix>
                <humanDocumentationPrefix>Command:</humanDocumentationPrefix>
            </parameters>
        </component>

        <!-- Cross-channel notification configuration -->
        <component type="Helpmebot.Configuration.CrossChannelServiceConfiguration, Helpmebot.Configuration">
            <parameters>
                <rateLimitMax>2</rateLimitMax>
                <rateLimitDuration>5</rateLimitDuration>
            </parameters>
        </component>

        <component type="Helpmebot.Configuration.HelpeeManagementConfiguration, Helpmebot.Configuration">
            <parameters>
                <targetChannel/>
                <monitorChannel/>
                <ignoredNicknames>
                    <list>
                        <item>ChanServ</item>
                    </list>
                </ignoredNicknames>
            </parameters>
        </component>

        <component type="Helpmebot.Configuration.NotificationReceiverConfiguration, Helpmebot.Configuration">
            <parameters>
                <enable>false</enable>
                <pollingInterval>5</pollingInterval>
                <channelMap>
                    <dictionary>
                        <!--<entry key="type"><list><entry>#channel-to-report</entry></list></entry>-->
                    </dictionary>
                </channelMap>
            </parameters>
        </component>

        <component type="Helpmebot.Configuration.RabbitMqConfiguration, Helpmebot.Configuration">
            <parameters>
                <enabled>false</enabled>
                <notificationQueue>notification</notificationQueue>
            </parameters>
        </component>

        <!-- Swappable components -->
        <component service="Helpmebot.CoreServices.Services.Interfaces.IUrlShorteningService, Helpmebot.CoreServices"
                   type="Helpmebot.CoreServices.Services.UrlShortening.IsGdUrlShorteningService, Helpmebot.CoreServices" />
        <component service="Helpmebot.CoreServices.Services.Interfaces.IGeolocationService, Helpmebot.CoreServices"
                   type="Helpmebot.CoreServices.Services.Geolocation.MaxMindGeolocationService, Helpmebot.CoreServices" />
    </components>
</configuration>